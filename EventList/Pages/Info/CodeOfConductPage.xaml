<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="EventList.Pages.Info.CodeOfConductPage"
    xmlns:local="clr-namespace:EventList;assembly=EventList"
    Title="Code of Conduct"
    BackgroundColor="{DynamicResource WindowBackground}" BackgroundImage="">
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="{DynamicResource CardSpacing}" Padding="0,15">
        <StackLayout Spacing="0">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{DynamicResource ThemeColor}" Padding="{StaticResource StandardPadding}">
                <Label Text="Code of Conduct" FontAttributes="Bold" FontSize="18" FontFamily="sans-serif-light" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" VerticalTextAlignment="Center"/>
            </StackLayout>

            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White" Padding="{StaticResource StandardPadding}">
                <ScrollView>
                    <Label x:Name="CodeOfConductText" Style="{DynamicResource EvolveListItemDetailextStyle}"/>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>
